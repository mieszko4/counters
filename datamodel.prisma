type Poll {
  id: ID! @unique
  name: String! @unique
  question: String!
  createdAt: DateTime!
  answers: [Answer!]!
}

type Answer {
  id: ID! @unique
  name: String!
  votes: [Vote!]! @default(value: [])
  poll: Poll!
}

type Vote {
  id: ID! @unique
  value: Int!
  uuid: String
  isInvalid: Boolean! @default(value: "false")
  createdAt: DateTime!
  validUntil: DateTime
  answer: Answer!
}