type Poll {
  id: ID! @unique
  name: String! @unique
  question: String!
  createdAt: DateTime!
  answers: [Answer!]!
}

type Answer {
  id: ID! @unique
  name: String!
  count: Int! @default(value: 0) # deprecated - use votes!
  votes: [Vote]! @default(value: [])
  poll: Poll #TODO - make required
}

type Vote {
  id: ID! @unique
  value: Int!
  createdAt: DateTime!
  validUntil: DateTime
  answer: Answer!
}