type Poll {
  id: ID! @id
  name: String! @unique
  question: String!
  updatedAt: DateTime! @updatedAt
  createdAt: DateTime! @createdAt
  answers: [Answer!]! @relation(name: "AnswerPoll")
  params: [Param!]! @relation(name: "ParamPoll")
}

type Param {
  id: ID! @id
  key: String! @unique
  value: String
  poll: Poll! @relation(name: "ParamPoll", link: INLINE, onDelete: CASCADE)
}

type Answer {
  id: ID! @id
  name: String!
  updatedAt: DateTime! @updatedAt
  createdAt: DateTime! @createdAt
  votes: [Vote!]! @relation(name: "VoteAnswer")
  poll: Poll! @relation(name: "AnswerPoll", link: INLINE, onDelete: CASCADE)
}

type Vote {
  id: ID! @id
  value: Int!
  uuid: String
  isInvalid: Boolean! @default(value: false)
  updatedAt: DateTime! @updatedAt
  createdAt: DateTime! @createdAt
  validUntil: DateTime
  answer: Answer! @relation(name: "VoteAnswer", link: INLINE, onDelete: CASCADE)
}