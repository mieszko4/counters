type Poll {
  id: ID! @unique
  name: String! @unique
  question: String!
  createdAt: DateTime!
  answers: [Answer!]! @relation(name: "AnswerPoll", onDelete: CASCADE)
}

type Answer {
  id: ID! @unique
  name: String!
  votes: [Vote!]! @default(value: []) @relation(name: "VoteAnswer", onDelete: CASCADE)
  poll: Poll! @relation(name: "AnswerPoll", onDelete: CASCADE)
}

type Vote {
  id: ID! @unique
  value: Int!
  uuid: String
  isInvalid: Boolean! @default(value: "false")
  createdAt: DateTime!
  validUntil: DateTime
  answer: Answer! @relation(name: "VoteAnswer", onDelete: CASCADE)
}